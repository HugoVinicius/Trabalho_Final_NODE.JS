<!doctype html>
<html lang="en-us">

<head>

    <meta charset="utf-8">
    <title>{{Title}}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="http://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="title">
            <h3> {{Title}}</h3>
        </div>
        <div class="btn-voltar">
            <form action="/search" method="GET">
                <button type="submit" class="btn btn-danger">
                    <span class="iconify" style="padding-bottom:2px; width:25px; height:25px;"
                        data-icon="ion:md-arrow-round-back" data-inline="false"></span>
                    Back
                </button>
            </form>
        </div>
        <div class="divisor"></div>
        {{#each Items}}
        <div class="row heroes">
            <div class="col-4">
                <img src="{{thumbnail.path}}.{{thumbnail.extension}}" alt="thumbnail" height="300" width="300">
            </div>
            <div class="col-8">
                <div class="row">
                    <h1><b>Name:</b> {{name}}</h1>
                </div>
                <div class="row">
                    <p><b>Description:</b> {{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</body>

</html>
<style>
    .heroes {
        margin-bottom: 15px;
    }

    .title {
        text-align: center;
        margin-bottom: 10px;
    }
    .btn-voltar{
        margin-bottom: 15px;
    }
    .divisor {
    border-bottom: 2px solid;
}
</style>